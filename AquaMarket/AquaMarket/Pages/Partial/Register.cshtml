@using AquaMarket_DTO
@model Profile
@{
     <form method="post" asp-page-handler="Register">
      <!-- Email input -->
      <div class="form-outline mb-4">
        <input type="email" asp-for="Email" class="form-control" placeholder="Email"/>
      </div>
      <!-- Name input -->
      <div class="form-outline mb-4">
        <input type="text" asp-for="Name" class="form-control" placeholder="Имя"/>
      </div>

      <!-- Username input -->
      <div class="form-outline mb-4">
        <input type="text" asp-for="Surname" class="form-control" placeholder="Фамилия" />
      </div>
      
      <div class="form-outline mb-4">
        <input type="text" asp-for="Patronymic" class="form-control" placeholder="Отчество" />
      </div>
      
      <div class="form-outline mb-4">
        <input type="tel" asp-for="Phone" class="form-control" placeholder="Номер телефона"/>
      </div>

      <!-- Submit button -->
      <button type="submit" class="btn btn-outline-primary  btn-block mb-3">Присоединиться!</button>
      </form>
}
